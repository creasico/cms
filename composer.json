{
    "name": "creasi/cms",
    "description": "Creasi CMS.",
    "keywords": ["creasi", "cms", "project", "skeleton", "laravel"],
    "license": "MIT",
    "type": "project",
    "scripts": {
        "test:tdd": "php vendor/bin/phpunit -c tests/phpunit.xml --coverage-text --coverage-clover tests/clover.xml --exclude-group integration",
        "test:bdd": "php vendor/bin/phpunit -c tests/phpunit.xml --coverage-text --coverage-clover tests/clover.xml --group integration",
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/app/"
        }
    },
    "require": {
        "php": ">=5.5.9",
        "guzzlehttp/guzzle": "^6.2",
        "intervention/image": "~2.3",
        "laravel/framework": "5.2.*",
        "league/flysystem-aws-s3-v3": "^1.0",
        "predis/predis": "^1.0",
        "sentry/sentry-laravel": "~0.3"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "fitztrev/query-tracer": "~1.0",
        "itsgoingd/clockwork": "~1.11",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "symfony/css-selector": "~3.0",
        "symfony/dom-crawler": "~3.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist"
    }
}
